@model IEnumerable<Eduman.Models.ViewModels.AllFeesViewModel>
@{
    
}

<h1 class="text-center">All Fees</h1>
<hr class="eventures-bg-color hr-2 w-75" />
<table class="table w-75 mx-auto table-hover border-top-0">
    <thead>
    <tr>
        <th scope="col">Student Name</th>
        <th scope="col">Teacher Name</th>
        <th scope="col">Due Date</th>
        <th scope="col">Cost</th>
        <th scope="col">Action</th>
    </tr>
    </thead>
    <tbody>

    @foreach (var m in @Model)
    {
        <tr>
            <th scope="row">@m.StudentUsername</th>
            <td>@m.TeacherUsername</td>
            <td>@m.DueDate.ToString("dd/MM/yyyy hh:mm")</td>
            <td>@m.Cost</td>
            <td><a class="btn eduman-secbg-color text-white" asp-controller="Fees" asp-action="Details" asp-route-id="@m.Id">Details</a></td>
        </tr>
        
    }
    </tbody>
</table>