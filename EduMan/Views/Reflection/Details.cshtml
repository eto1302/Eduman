@model Eduman.Models.ViewModels.ReflectionDetailsViewModel


@if (Model.IsCompliment)
{
    <h1 class="text-center">Compliment</h1>
}
else
{
    <h1 class="text-center">Criticism</h1>
}
<h2 class="text-center">@Model.DateCreated</h2>
<hr class="hr-2 bg-dark" />
<div class="half-width mx-auto d-flex justify-content-between">
    <h3 class="text-center">Student: @($"{Model.StudentFirstName} {Model.StudentLastName}")</h3>
    <h3 class="text-center">Teacher: @($"{Model.TeacherFirstName} {Model.TeacherLastName}")</h3>
</div>
<hr class="hr-2 bg-dark" />
<h3 class="text-center">Description</h3>
<p class="text-center mt-4">
    @Model.Description
</p>
<hr class="hr-2 bg-dark" />
<h3 class="text-center">Actions</h3>
@if (Model.IsCompliment)
{
    <div class="mt-4 d-flex justify-content-around">
        <div class="mt-4 d-flex justify-content-around">
            <a class="btn eduman-secbg-color text-white" asp-controller="Reflection" asp-action="AllCompliments">Back To All</a>
        </div>
    </div>
}
else
{
    <div class="mt-4 d-flex justify-content-around">
        <div class="mt-4 d-flex justify-content-around">
            <a class="btn eduman-secbg-color text-white" asp-controller="Reflection" asp-action="AllCriticisms">Back To All</a>
        </div>
    </div>
}